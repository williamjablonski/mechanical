<%= form_for @servico, :html => { :class => "form-horizontal servico" } do |f| %>

    <% if @servico.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@servico.errors.count, "error") %> prohibited this servico from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @servico.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :titulo, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :titulo, :class => 'form-control' %>
    </div>
    <%= error_span(@servico[:titulo]) %>
  </div>
  <div class="control-group">
    <%= f.label :valorVenda, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :valorVenda, :class => 'form-control' %>
    </div>
    <%= error_span(@servico[:valorVenda]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            servicos_path, :class => 'btn btn-default' %>

<% end %>
