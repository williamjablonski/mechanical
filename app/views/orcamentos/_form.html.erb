<%= form_for @orcamento, :html => { :class => "form-horizontal orcamento" } do |f| %>

    <% if @orcamento.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@orcamento.errors.count, "error") %> prohibited this orcamento from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @orcamento.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :idveiculo, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select(:idveiculo, Veiculo.all, :id, :placa , :class => 'form-control' ) %>
    </div>
    <%= error_span(@orcamento[:idveiculo]) %>
  </div>
  <div class="control-group">
    <%= f.label :tipoPedido, :class => 'control-label' %>
    <div class="controls">
    <%= f.select(:tipoPedido) do %>
          <% [['OrÃ§amento', 1], ['Pedido', 2]].each do |c| -%>
              <%= content_tag(:option, c.first, value: c.last) %>
          <% end %>
      <% end %>
    </div>
    <%= error_span(@orcamento[:tipoPedido]) %>
  </div>
  <div class="control-group">
    <%= f.label :idpecaOrcamento, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select(:idpecaOrcamento, Estoque.all, :id, :titulo , :class => 'form-control' ) %>
    </div>
    <%= error_span(@orcamento[:idpecaOrcamento]) %>
  </div>
  <div class="control-group">
    <%= f.label :idServicoOrcamento, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select(:idServicoOrcamento, Servico.all, :id, :titulo , :class => 'form-control' ) %>
    </div>
    <%= error_span(@orcamento[:idServicoOrcamento]) %>
  </div>
  <div class="control-group">
    <%= f.label :vrTotal, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :vrTotal, :class => 'form-control' %>
    </div>
    <%= error_span(@orcamento[:vrTotal]) %>
  </div>
  <div class="control-group">
    <%= f.label :idFOrmaPgto, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :idFOrmaPgto, :class => 'form-control' %>
    </div>
    <%= error_span(@orcamento[:idFOrmaPgto]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            orcamentos_path, :class => 'btn btn-default' %>

<% end %>
