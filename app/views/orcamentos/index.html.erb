<%- model_class = Orcamento -%>

<div class="page-header">
  <%= form_tag(orcamentos_path, :method => :get) do %>
      <%= text_field_tag 'search', nil, placeholder: 'Entre com a placa...'%>
      <%= submit_tag "Pesquisar"%>
  <% end %>
  <a href="/orcamentos#index">
    <%= button_tag "Limpar pesquisa" %>
  </a>

  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:idveiculo) %></th>
      <th><%= model_class.human_attribute_name(:tipoPedido) %></th>
      <th><%= model_class.human_attribute_name(:idpecaOrcamento) %></th>
      <th><%= model_class.human_attribute_name(:idServicoOrcamento) %></th>
      <th><%= model_class.human_attribute_name(:vrTotal) %></th>
      <th><%= model_class.human_attribute_name(:idFOrmaPgto) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @orcamentos.each do |orcamento| %>
      <tr>
        <td><%= link_to orcamento.id, orcamento_path(orcamento) %></td>
        <td><%= orcamento.idveiculo %></td>
        <td><%= orcamento.tipoPedido %></td>
        <td><%= orcamento.idpecaOrcamento %></td>
        <td><%= orcamento.idServicoOrcamento %></td>
        <td><%= orcamento.vrTotal %></td>
        <td><%= orcamento.idFOrmaPgto %></td>
        <td><%=l orcamento.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_orcamento_path(orcamento), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      orcamento_path(orcamento),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_orcamento_path,
            :class => 'btn btn-primary' %>
