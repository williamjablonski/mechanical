<%= form_for @estoque, :html => { :class => "form-horizontal estoque" } do |f| %>

    <% if @estoque.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@estoque.errors.count, "error") %> prohibited this estoque from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @estoque.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :titulo, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :titulo, :class => 'form-control' %>
    </div>
    <%= error_span(@estoque[:titulo]) %>
  </div>
  <div class="control-group">
    <%= f.label :estoque, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :estoque, :class => 'form-control' %>
    </div>
    <%= error_span(@estoque[:estoque]) %>
  </div>
  <div class="control-group">
    <%= f.label :valorCusto, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :valorCusto, :class => 'form-control' %>
    </div>
    <%= error_span(@estoque[:valorCusto]) %>
  </div>
  <div class="control-group">
    <%= f.label :valorVenda, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :valorVenda, :class => 'form-control' %>
    </div>
    <%= error_span(@estoque[:valorVenda]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            estoques_path, :class => 'btn btn-default' %>

<% end %>
