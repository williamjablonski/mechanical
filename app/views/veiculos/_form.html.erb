<%= form_for @veiculo, :html => { :class => "form-horizontal veiculo" } do |f| %>

    <% if @veiculo.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@veiculo.errors.count, "error") %> prohibited this veiculo from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @veiculo.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :placa, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :placa, :class => 'form-control' %>
    </div>
    <%= error_span(@veiculo[:placa]) %>
  </div>
  <div class="control-group">
    <%= f.label :modelo, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :modelo, :class => 'form-control' %>
    </div>
    <%= error_span(@veiculo[:modelo]) %>
  </div>
  <div class="control-group">
    <%= f.label :ano, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :ano, :class => 'form-control' %>
    </div>
    <%= error_span(@veiculo[:ano]) %>
  </div>
  <div class="control-group">
    <%= f.label :contato, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :contato, :class => 'form-control' %>
    </div>
    <%= error_span(@veiculo[:contato]) %>
  </div>
  <div class="control-group">
    <%= f.label :telefone, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :telefone, :class => 'form-control' %>
    </div>
    <%= error_span(@veiculo[:telefone]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            veiculos_path, :class => 'btn btn-default' %>

<% end %>
